{
    "name": "mindgram/graphql-federation",
    "version": "3.0.0",
    "description": "Utility for creating GraphQL microservices, which can be combined into a single endpoint through tools like Apollo Gateway",
    "keywords": ["graphql", "federation", "apollo"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pascal de vink",
            "email": "pascal@pascaldevink.nl"
        }
    ],
    "autoload": {
        "psr-4": {
            "Mindgram\\GraphQLFederation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mindgram\\GraphQLFederation\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "webonyx/graphql-php": "^14.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4"
    }
}
